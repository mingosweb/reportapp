section(id="main-content-stretch")
	div.container
			div(class="card gray lighten-2 card-option")
				h4 Datos de organizacion
				div.row
					div(class='col s12 m12 l4 content-part card-option'): img(src='/images/avatar-organizacion.png' class='center')
					div(class='col s12 m12 l8 content-part')
						form(class="col s12", id='form-register-organizacion' action='/organizacion/add' method='post')
							div(class="row")
								div(class='col s12 m6 l6')
									div(class="input-field col s12")
										input(id="text" name='nombre-org' type="text" placeholder='Nombre' class="validate" required)
									div(class="input-field col s12")
										input(id="text" name='nit-org' type="text" placeholder='Nit' class="validate")
									div(class="input-field col s12")
										input(id="text" name='categoria-org' type="text" placeholder='Categoria' class="validate" required)
									div(class="input-field col s12")
										input(id="ciudad" name='ciudad-org' type="text" class="validate" required)
								div(class='col s12 m6 l6')
									div(class="input-field col s12")
										input(id="email-org" name='email-org' type="email" class="validate" placeholder='Email' required)
										label(id='label-email' for='email-org') 
									div(class='input-field col s12')
										input(id='password' name='password-org' type='password' placeholder='Password' required)
									div(class='input-field col s12')
										input(class='btn' value='registrar' type='submit')