div(class='container-margin-m')
    div(class='row')
        div(class="col s12 l8 grid-column")
            section(id='owl-slider' class="owl-slider")
                div(class="item")
                    img(src='/images/slider-presentation/item-1.png' class='responsive-img')
                div(class="item")
                    img(src='/images/slider-presentation/item-2.png' class='responsive-img')
                div(class="item")
                    img(src='/images/slider-presentation/item-3.png' class='responsive-img')
        div(class="col s12 l3 grid-column")
            div(class="card gray lighten-2")
                form(class="col s12", id='form-login')
                    h5(class='center') Inicia sesión
                    div(class="row")
                        div(class="input-field col s12")
                            input(id="email" type="email" placeholder='email' class="validate" required)
                            label(for="email" id='label-email')
                        div(class="input-field col s12")
                            input(id="password" type="password" class="validate" placeholder='Password' required)
                    a(href='#' class='btn form-login-btn' id='btn-login') Entra
                    h5(class='center') Ó
                    a(class='btn form-login-btn' href='/register') Registrate