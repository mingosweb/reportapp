extends ../layout
block content
    include ../components/header
    div(class='container-margin-m')
        div(class='row')
            div(class='col m3 l4 s12')
                div(class='grid-column grid-panel')
                    h4(class='title-small') Encuentra tus notificaciones
                    div(class="input-field col s12")
                        if(credencial.rol === "ciudadano")
                            input(type="text" data-url='/notificacion/ciudadano/list-word/::key::' class='search-pagination' placeholder='Ingresa una palabra clave' required)
                        else
                            input(type="text" data-url='/notificacion/organizacion/list-word/::key::' class='search-pagination' placeholder='Ingresa una palabra clave' required)
                    figure(class='align-center hide-on-med-and-down')
                        img(src='/images/search-reports.png' class='responsive-img')
            div(class='col m7 l8 s12')
                div(class='grid-column grid-panel')
                        div(class='message-box')
                            h4.title-small Encuentra los sucesos que ocurren en reportar.co mas rapido. ingresa una palabra y listo!
                        header(class='header-section row')
                            div(class='header-container container-controls col s12 m12 l12')
                                ul(class='pagination center' data-template="notificacion")
                                    li(class='waves-efect pagination-prev'): a(href='#') <
                                    li(class='waves-efect pagination-number'): a(href='#') 1
                                    li(class='pagination-next'): a(href='#') >
                        div(class='row container-result' data-template="notificacion")
                            div(class='report-list result-item')
                                div(class='grid-row')
                                    div(class='report-list-col-information')
                                        h3(class='title-mini'): a(href='/#{credencial.nombre}/reportes/::reporte::/details' data-params='titulo') titulo
                                        p(data-params='descripcion') descripcion
                                        small(data-params='lapsoDeTiempo') lapsoDeTiempo
                            // results here
block append scripts
    script(src='/javascripts/pagination.js')
    script.
        template = "notificacion"
    script(src='/javascripts/search-peoples.js')